<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/custom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@color/off_white">

        <ImageButton
            android:id="@+id/ib_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="17dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_price_range"
            style="@style/AirbnbFontStyle.Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44.59dp"
            android:layout_marginTop="12dp"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/ib_back_button"
            app:layout_constraintTop_toBottomOf="@id/ib_back_button" />

        <TextView
            android:id="@+id/tv_min_price"
            style="@style/AirbnbFontStyle.Headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/tv_price_range"
            app:layout_constraintTop_toBottomOf="@id/tv_price_range"
            tools:text="1000"
            />

<!--        <TextView-->
<!--            android:id="@+id/tv_max_price"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            style="@style/AirbnbFontStyle.Headline5"-->
<!--            app:layout_constraintStart_toEndOf="@id/tv_min_price"-->
<!--            app:layout_constraintTop_toBottomOf="@id/tv_price_range"-->
<!--            android:layout_marginTop="8dp"-->
<!--            tools:text="2000"-->
<!--            />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_min_price" />

        <ImageButton
            android:id="@+id/ib_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="19dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_check_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>